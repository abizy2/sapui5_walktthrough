<mvc:View
	controllerName="sap.m.sample.SplitApp.C"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<SplitApp
		id="SplitAppDemo"
		initialDetail="detail"
		initialMaster="master"
		orientationChange=".onOrientationChange">
		<detailPages>
			<Page
				id="detail"
				backgroundDesign= "Solid"
				class="sapUiStdPage">
				<VBox
							alignItems="Center">
								<Image
									src="images/video.png"
									mode="{/imageMode}"
									height="{/imageHeight}"
									backgroundSize="5em 5em"
									backgroundPosition="center"
									width="{/imageWidth}" >
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</Image>
							<Text text="MSI GeForce RTX 2060 SUPER ARMOR OC" class="sapUiSmallMarginTop"/>
						</VBox>
			</Page>
			<Page
				id="detailDetail"
				title="Процессор"
				class="sapUiStdPage"
				backgroundDesign= "Solid"
				showNavButton="true"
				navButtonText="Back"
				navButtonPress=".onPressDetailBack">
				<VBox class="sapUiSmallMargin">
					<RadioButtonGroup columns="1" width="100px" class="sapUiMediumMarginBottom" select=".onPressModeBtn"> 
					</RadioButtonGroup>
					<VBox
							alignItems="Center">
								<Image
									src="images/proc.png"
									mode="{/imageMode}"
									height="{/imageHeight}"
									backgroundSize="5em 5em"
									backgroundPosition="center"
									width="{/imageWidth}" >
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</Image>
							<Text text="Intel Core i5-9600K" class="sapUiSmallMarginTop"/>
						</VBox>
				</VBox>
			</Page>
			<Page
				id="detail2"
				title="Материнская плата"
				backgroundDesign= "Solid"
				class="sapUiStdPage"
				showNavButton="true"
				navButtonText="Back"
				navButtonPress=".onPressDetailBack">
				<VBox class="sapUiSmallMargin">
					<RadioButtonGroup columns="1" width="500px" class="sapUiMediumMarginBottom" select=".onPressModeBtn">
				
					</RadioButtonGroup>
					<Image
									src="images/matplata.png"
									mode="{/imageMode}"
									height="{/imageHeight}"
									backgroundSize="5em 5em"
									backgroundPosition="center"
									width="{/imageWidth}" >
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</Image>
								<Text text="ASRock Z390 Extreme4" class="sapUiSmallMarginTop"/>
				</VBox>
		
			</Page>
			
			<Page
				id="detail3"
				title="Жесткий диск HDD"
				backgroundDesign= "Solid"
				class="sapUiStdPage"
				showNavButton="true"
				navButtonText="Back"
				navButtonPress=".onPressDetailBack">
				<VBox class="sapUiSmallMargin">
					<RadioButtonGroup columns="1" width="500px" class="sapUiMediumMarginBottom" select=".onPressModeBtn">
					</RadioButtonGroup>
					<VBox
							alignItems="Center">
								<Image
									src="images/hdd.png"
									mode="{/imageMode}"
									height="{/imageHeight}"
									backgroundSize="5em 5em"
									backgroundPosition="center"
									width="{/imageWidth}" >
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</Image>
							<Text text="SEAGATE Barracuda ST2000DM008" class="sapUiSmallMarginTop"/>
						</VBox>
				</VBox>
		
			</Page>
			
			<Page
				id="detail4"
				title="Твердотельный накопитель SSD"
				backgroundDesign= "Solid"
				class="sapUiStdPage"
				showNavButton="true"
				navButtonText="Back"
				navButtonPress=".onPressDetailBack">
				<VBox class="sapUiSmallMargin">
					<RadioButtonGroup columns="1" width="500px" class="sapUiMediumMarginBottom" select=".onPressModeBtn">
					</RadioButtonGroup>
					<VBox
							alignItems="Center">
								<Image
									src="images/ssd.png"
									mode="{/imageMode}"
									height="{/imageHeight}"
									backgroundSize="5em 5em"
									backgroundPosition="center"
									width="{/imageWidth}" >
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</Image>
							<Text text="SSD Samsung 860 EVO MZ-76E500BW" class="sapUiSmallMarginTop"/>
						</VBox>
				</VBox>
		
			</Page>
			<Page
				id="detail5"
				title="Оперативная память"
				backgroundDesign= "Solid"
				class="sapUiStdPage"
				showNavButton="true"
				navButtonText="Back"
				navButtonPress=".onPressDetailBack">
				<VBox class="sapUiSmallMargin">
					<RadioButtonGroup columns="1" width="500px" class="sapUiMediumMarginBottom" select=".onPressModeBtn">
					</RadioButtonGroup>
					<VBox
							alignItems="Center">
								<Image
									src="images/oper.png"
									mode="{/imageMode}"
									height="{/imageHeight}"
									backgroundSize="5em 5em"
									backgroundPosition="center"
									width="{/imageWidth}" >
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</Image>
							<Text text="Crucial Ballistix Sport LT DDR4 1x16Gb" class="sapUiSmallMarginTop"/>
						</VBox>
				</VBox>
		
			</Page>
		</detailPages>
		<masterPages>
			<Page
				id="master"
				title="Сборка компьютера"
				backgroundDesign= "List"
				icon="sap-icon://action"
				class="sapUiStdPage">
				<List>
					<StandardListItem title="Комплектующие" type="Navigation" press=".onPressGoToMaster" />
				</List>
			</Page>
			<Page
				id="master2"
				title="Комплектующие"
				backgroundDesign= "List"
				icon="sap-icon://action"
				class="sapUiStdPage"
				showNavButton="true"
				navButtonPress=".onPressMasterBack">
				<List itemPress=".onListItemPress">
					<items>
						<StandardListItem title="Видеокарта" type="Active" custom:to="detail" />
						<StandardListItem title="Процессор" type="Active" custom:to="detailDetail" />
						<StandardListItem title="Материнская плата" type="Active" custom:to="detail2" />
						<StandardListItem title="Жесткии диски HDD" type="Active" custom:to="detail3" />
						<StandardListItem title="SSD-диски" type="Active" custom:to="detail4" />
						<StandardListItem title="Оперативная память" type="Active" custom:to="detail5" />
					</items>
				</List>
			</Page>
		</masterPages>
	</SplitApp>
</mvc:View>