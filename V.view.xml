<mvc:View
	controllerName="sap.m.sample.SplitApp.C"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<SplitApp
		id="SplitAppDemo"
		initialDetail="detail"
		initialMaster="master"
		orientationChange=".onOrientationChange">
		<detailPages>
			<Page
				id="detail"
				title="Detail 1"
				backgroundDesign= "Solid"
				class="sapUiStdPage">
			</Page>
			<Page
				id="detailDetail"
				title="Detail 1 Page"
				class="sapUiStdPage"
				backgroundDesign= "Solid"
				showNavButton="true"
				navButtonText="Back"
				navButtonPress=".onPressDetailBack">
				<VBox class="sapUiSmallMargin">
					<Label text="This is Detail Page2" />
					<RadioButtonGroup columns="1" width="500px" class="sapUiMediumMarginBottom" select=".onPressModeBtn">
				
					</RadioButtonGroup>
				</VBox>
			</Page>
			<Page
				id="detail2"
				title="Detail 3 Page"
				backgroundDesign= "Solid"
				class="sapUiStdPage"
				showNavButton="true"
				navButtonText="Back"
				navButtonPress=".onPressDetailBack">
				<VBox class="sapUiSmallMargin">
					<Label text="This is Detail Page3" />
					<RadioButtonGroup columns="1" width="500px" class="sapUiMediumMarginBottom" select=".onPressModeBtn">
				
					</RadioButtonGroup>
				</VBox>
		
			</Page>
			
			<Page
				id="detail3"
				title="Detail 3 Page"
				backgroundDesign= "Solid"
				class="sapUiStdPage"
				showNavButton="true"
				navButtonText="Back"
				navButtonPress=".onPressDetailBack">
				<VBox class="sapUiSmallMargin">
					<Label text="This is Detail Page4" />
					<RadioButtonGroup columns="1" width="500px" class="sapUiMediumMarginBottom" select=".onPressModeBtn">
				
					</RadioButtonGroup>
				</VBox>
		
			</Page>
			
			<Page
				id="detail4"
				title="Detail 4 Page"
				backgroundDesign= "Solid"
				class="sapUiStdPage"
				showNavButton="true"
				navButtonText="Back"
				navButtonPress=".onPressDetailBack">
				<VBox class="sapUiSmallMargin">
					<Label text="This is Detail Page5" />
					<RadioButtonGroup columns="1" width="500px" class="sapUiMediumMarginBottom" select=".onPressModeBtn">
				
					</RadioButtonGroup>
				</VBox>
		
			</Page>
			<Page
				id="detail5"
				title="Detail 5 Page"
				backgroundDesign= "Solid"
				class="sapUiStdPage"
				showNavButton="true"
				navButtonText="Back"
				navButtonPress=".onPressDetailBack">
				<VBox class="sapUiSmallMargin">
					<Label text="This is Detail Page6" />
					<RadioButtonGroup columns="1" width="500px" class="sapUiMediumMarginBottom" select=".onPressModeBtn">
				
					</RadioButtonGroup>
				</VBox>
		
			</Page>
		</detailPages>
		<masterPages>
			<Page
				id="master"
				title="Сборка компьютера"
				backgroundDesign= "List"
				icon="sap-icon://action"
				class="sapUiStdPage">
				<List>
					<StandardListItem title="Комплектующие" type="Navigation" press=".onPressGoToMaster" />
				</List>
			</Page>
			<Page
				id="master2"
				title="Комплектующие"
				backgroundDesign= "List"
				icon="sap-icon://action"
				class="sapUiStdPage"
				showNavButton="true"
				navButtonPress=".onPressMasterBack">
				<List itemPress=".onListItemPress">
					<items>
						<StandardListItem title="Видеокарта" type="Active" custom:to="detail" />
						<StandardListItem title="Процессор" type="Active" custom:to="detailDetail" />
						<StandardListItem title="Материнская плата" type="Active" custom:to="detail2" />
						<StandardListItem title="Жесткии диски HDD" type="Active" custom:to="detail3" />
						<StandardListItem title="SSD-диски" type="Active" custom:to="detail4" />
						<StandardListItem title="Оперативная память" type="Active" custom:to="detail5" />
					</items>
				</List>
			</Page>
		</masterPages>
	</SplitApp>
</mvc:View>