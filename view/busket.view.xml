<mvc:View 
  controllerName="namespace.controller.busket"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
		<Table
			id='BusketList'
			items="{main>/busket}">
				<columns>
			<Column
				width="12em">
				<Text text="Фотография товара" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Название продукта" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Количество" />
			</Column>
			<Column
				hAlign="End">
				<Text text="Цена" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectListItem
						icon="{main>photo}"/>
					<Text
						text="{main>title}" />
					<HBox>
						<Button text="-" press="onDelete">
											</Button> 
											<Input value= "{main>Quantity}" width="2em">
											</Input>
											<Button text="+" press="onAdd">
											</Button> 
							
					</HBox>
						
					<ObjectNumber
							number="{main>ExtendedPrice}"
							unit= "{main>CurrencyCode}"
							 />
				</cells>
			</ColumnListItem>
		</items>
		</Table>
	
					
</mvc:View>