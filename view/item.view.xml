<mvc:View 
  controllerName="namespace.controller.item"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
	<Page 
			id="itemPage"
			title= 'Товар'
			showNavButton="true"
			navButtonPress=".onNavBack"
			class="sapUiResponsiveContentPadding">
			<Panel
				id="itemPanel"
				width="auto"
				class="sapUiResponsiveMargin sapUiNoContentPadding"
				items="{main>/catalog}">
				<content>
					<f:SimpleForm
						minWidth="1024"
						editable="false"
						layout="ResponsiveGridLayout"
						labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
						columnsL="1" columnsM="1">
						<f:content>							
							<Text text="{type}"/>							
							<Text text="{title}"/>							
							<Text text="{ExtendedPrice}"/>							
							<Text text="{Quantity}"/>							
							<Text text="{photo}"/>
							<Text text="{busket}"/>
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
		</content>
	</Page>
</mvc:View>