<mvc:View 
  controllerName="namespace.controller.catalog"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="Каталог">
		<!-- Тут выводится список товаров.ю надо поменять список на набор тайлов. Чтоб было как в настоящих магазинах -->
	         
			<TileContent id='catalogList'
			             items="{main>/catalog}"
						 title="{main>title}"
				         description="{main>type}"
						 press= "omCatalogItemPress"
			             type='Active'>
			 </TileContent>
	
	</Page>
</mvc:View>