<mvc:View 
  controllerName="SplitApp.controller.catalog"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="Каталог">
		<!-- Тут выводится список товаров.ю надо поменять список на набор тайлов. Чтоб было как в настоящих магазинах -->
		<List
			id='catalogList'
			items="{invoice>/catalog}">
			<StandardListItem
				title="{invoice>title}"
				description="{invoice>type}"
				type='Active'
				press="omCatalogItemPress"/>
		</List>
	</Page>
</mvc:View>